<%= form_with scope: :food_option, :url => food_options_path, class: "diet_plan-form", locale: true do |f| %>
  <div class="mb-3">
    <%= f.label :main_ingredient %>
    <%= f.text_field :main_ingredient %>
  </div>

  <div class="mb-3">
    <%= f.label :meal_type %>
    <%= f.select :meal_type, ["Breakfast", "Lunch", "Dinner", "Snack"] %>
  </div>

  <div>
    <%= f.label :dish_type %>
    <%= f.select :dish_type, ["Biscuits and cookies", "Bread", "Cereals", "Condiments and sauces", "Desserts", "Drink", "Main course", "Pancake", "Pancakes", "Preserve", "Salad", "Sandwiches", "Side dish", "Soup", "Starter", "Sweets"] %>
  </div>

  <div>
    <%= f.label :diet_type %>
    <%= f.select :diet_type, ["balanced", "high-fiber", "high-protein", "low-carb", "low-fat", "low-sodium"]%>
  </div>

  <div>
    <%= f.label :cuisine_type %>
    <%= f.select :cuisine_type, ["American", "Asian", "British", "Caribbean", "Central Europe", "Chinese", "Eastern Europe", "French", "Indian", "Italian", "Japanese", "Kosher", "Mediterranean", "Mexican", "Middle Eastern", "Nordic", "South American", "South East Asian"]%>
  </div>

  <div>
    <%= f.label :health_label %>
    <%= f.select :health_label, [ "alcohol-free", "celery-free", "crustacean-free", "dairy-free", "egg-free", "fish-free", "fodmap-free", "gluten-free", "immuno-supportive", "keto-friendly", "kidney-friendly", "kosher", "low-potassium", "low-sugar", "lupine-free", "Mediterranean", "mollusk-free", "mustard-free", "no-oil-added", "paleo", "peanut-free", "pork-free", "sesame-free", "shellfish-free", "soy-free", "tree-nut-free", "vegan", "vegetarian", "wheat-free"] %>
  </div>

  <div>
    <%= f.label :no_of_ingredients %>
    <%= f.number_field :no_of_ingredients %>
  </div>

  <div>
    <%= f.label :calories %>
    <%= f.number_field :calories%>
  </div>

  <div>
    <%= f.label :excluded %>
    <%= f.text_field :excluded%>
  </div>

  <div>
    <%= f.submit class: 'btn btn-outline-primary btn-sm' %>
  </div>
  
  <%= link_to 'Diet Plan', diet_plans_path, class: 'btn btn-primary btn-sm', method: :get %>
<% end %>
