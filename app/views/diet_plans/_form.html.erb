<%= form_with scope: :diet_plan, :url => diet_plans_path, model: @diet_plan, class: "diet_plan-form", locale: true do |f| %>
  <div class="mb-3">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :end_date %>
    <%= f.date_field :end_date%>
  </div>

  <div>
    <%= f.submit class: 'btn btn-outline-primary btn-sm' %>
  </div>
  <%= link_to 'Diet Plan', diet_plans_path, class: 'btn btn-primary btn-sm', method: :get %>
<% end %>